    %label{'for' => 'password'}
      Password
    %input#password{'type' => 'password', 'name' => 'password'}
  .form_row
    %label{'for' => 'facebook'}
      Facebook Connect
    %input#facebook{'type' => 'radio', 'name' => 'auth_provider', 'value' => 'facebook'}
  .form_row
    %label{'for' => 'google'}
      Google Friend Connect
    %input#google{'type' => 'radio', 'name' => 'auth_provider', 'value' => 'google'}
